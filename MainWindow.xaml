<Window x:Class="SQLBackupRestore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLBackupRestore"
        xmlns:models="clr-namespace:SQLBackupRestore.Models"
        mc:Ignorable="d"
        Title="VastOffice Database Restore Tool"
        Height="700"
        Width="800"
        MinHeight="600"
        MinWidth="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F0F4F8">

    <Window.Resources>
        <!-- Converter for boolean to visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Converter for string to visibility -->
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <!-- Animated Spinner Storyboard -->
        <Storyboard x:Key="SpinnerAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                           Storyboard.TargetProperty="Angle"
                           From="0" To="360" Duration="0:0:1.5"/>
        </Storyboard>

        <!-- Big friendly button style -->
        <Style x:Key="BigFriendlyButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- GroupBox style -->
        <Style TargetType="GroupBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="#F5F5F5" Padding="8,6">
                                        <ContentPresenter ContentSource="Header"
                                                        TextBlock.FontWeight="SemiBold"
                                                        TextBlock.FontSize="14"
                                                        TextBlock.Foreground="#333333"/>
                                    </Border>
                                    <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox style -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label style -->
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#555555"/>
        </Style>

        <!-- RadioButton style -->
        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- CheckBox style -->
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="White" CornerRadius="6" Padding="15" Margin="0,0,0,15"
                BorderBrush="#2196F3" BorderThickness="0,0,0,3">
            <StackPanel>
                <TextBlock Text="Database Restore Tool"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#333333"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding CurrentWindowsUser, StringFormat='Logged in as: {0}'}"
                           FontSize="12"
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Step 1: Database Type Selection -->
                <GroupBox Header="Step 1: Database Type">
                    <StackPanel>
                        <Label Content="Database Type:" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <RadioButton Content="Office (VastOffice)"
                                        IsChecked="{Binding DatabaseType, Converter={x:Static local:EnumToBooleanConverter.Instance}, ConverterParameter={x:Static models:DatabaseType.Office}}"
                                        IsEnabled="{Binding CanModifySettings}"
                                        Margin="0,0,30,0"/>
                            <RadioButton Content="Shop (VastPOS)"
                                        IsChecked="{Binding DatabaseType, Converter={x:Static local:EnumToBooleanConverter.Instance}, ConverterParameter={x:Static models:DatabaseType.Shop}}"
                                        IsEnabled="{Binding CanModifySettings}"/>
                        </StackPanel>

                        <Label Content="SQL Server Instance:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SqlServerInstance, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding CanModifySettings}"/>

                        <!-- Connection Status -->
                        <TextBlock Text="{Binding ConnectionStatus}"
                                  Margin="0,8,0,0"
                                  FontWeight="SemiBold"
                                  FontSize="13"
                                  Visibility="{Binding ConnectionStatus, Converter={StaticResource StringToVisibilityConverter}}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#F44336"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnectionSuccessful}" Value="True">
                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </GroupBox>

                <!-- Step 2: Backup File Selection Section -->
                <GroupBox Header="Step 2: Backup File">
                    <StackPanel>
                        <Label Content="Backup File (.bak):" FontWeight="SemiBold"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                    Text="{Binding BackupFilePath, Mode=OneWay}"
                                    IsReadOnly="True"
                                    Margin="0,0,10,0"/>
                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Command="{Binding BrowseBackupFileCommand}"
                                    Padding="15,5"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Step 3: Database Details Section -->
                <GroupBox Header="Step 3: Database Settings">
                    <StackPanel>
                        <Label Content="Database Name:" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding DatabaseName, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding CanModifySettings}"/>

                        <Label Content="Data File Folder:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding DataFileFolder, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding CanModifySettings}"
                                ToolTip="Directory where .mdf file will be stored"/>

                        <Label Content="Log File Folder:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding LogFileFolder, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding CanModifySettings}"
                                ToolTip="Directory where .ldf file will be stored"/>

                        <!-- Replace Existing Database Option -->
                        <CheckBox Content="Replace existing database if it exists"
                                 IsChecked="{Binding ReplaceExistingDatabase}"
                                 IsEnabled="{Binding CanModifySettings}"
                                 Margin="0,12,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Step 4: Actions & Status Section -->
                <GroupBox Header="Step 4: Restore">
                    <StackPanel>
                        <!-- Restore Button -->
                        <Button Content="Restore Database"
                                Command="{Binding RestoreDatabaseCommand}"
                                Style="{StaticResource BigFriendlyButton}"
                                HorizontalAlignment="Center"
                                Padding="25,10"
                                Margin="0,5,0,10"/>

                        <!-- Progress Bar -->
                        <ProgressBar Height="20"
                                    Value="{Binding ProgressValue}"
                                    IsIndeterminate="{Binding IsProgressIndeterminate}"
                                    Visibility="{Binding IsRestoring, Converter={StaticResource BoolToVisibility}}"
                                    Margin="0,0,0,10"
                                    Background="#E0E0E0"
                                    Foreground="#4CAF50"/>

                        <!-- Log Panel -->
                        <Label Content="Status Log:" FontWeight="SemiBold"/>
                        <Border BorderBrush="#CCCCCC"
                                BorderThickness="1"
                                Background="White">
                            <ScrollViewer Height="200"
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding LogEntries}"
                                             Padding="8">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding FormattedMessage}"
                                                      FontFamily="Consolas"
                                                      FontSize="11"
                                                      TextWrapping="Wrap"
                                                      Margin="0,1">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#333333"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Level}" Value="Success">
                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Level}" Value="Error">
                                                                <Setter Property="Foreground" Value="#F44336"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Level}" Value="Warning">
                                                                <Setter Property="Foreground" Value="#FF9800"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
